<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8EDFE"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/short_greenbig" />

    <TextView
        android:id="@+id/txtFlower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="flower for your life!"
        android:textSize="30dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgBig"
        app:layout_constraintStart_toStartOf="@+id/imgBig"
        app:layout_constraintTop_toBottomOf="@+id/imgBig" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="273dp"
        android:layout_height="60dp"
        android:layout_marginTop="164dp"
        android:text="GO"
        android:textSize="30dp"
        android:backgroundTint="#F18332"
        app:layout_constraintEnd_toEndOf="@+id/txtFlower"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/txtFlower"
        app:layout_constraintTop_toBottomOf="@+id/txtFlower" />
</androidx.constraintlayout.widget.ConstraintLayout>